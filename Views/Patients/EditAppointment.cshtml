@model Appointment

<h2>Edit Appointment</h2>

<form asp-controller="Patient" asp-action="EditAppointment" asp-route-appointmentId="@Model.AppointmentId" method="post">
    <div class="form-group">
        <label asp-for="AppointmentDate"></label>
        <input asp-for="AppointmentDate" class="form-control" />
        <span asp-validation-for="AppointmentDate" class="text-danger"></span>
    </div>
    <!-- Add other appointment properties if needed -->
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
