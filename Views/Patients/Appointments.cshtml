@model List<Appointment>

@{
    ViewData["Title"] = "Patient Appointments";
}

<h2>Appointments for @ViewData["PatientName"]</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Doctor</th>
                <!-- Add more columns if needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment.AppointmentDate.ToShortDateString()</td>
                    <td>@appointment.Doctor.FullName</td>
                    <!-- Add more columns if needed -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No appointments found for this patient.</p>
}

<a asp-controller="Patients" asp-action="Index">Back to Patients</a>
