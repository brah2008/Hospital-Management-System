@model Patient

<h2>Appointments for @Model.FirstName @Model.LastName</h2>

<p><a asp-action="Index">Back to Patients</a></p>

@if (Model.Appointments.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <!-- Add other appointment properties if needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model.Appointments)
            {
                <tr>
                    <td>@appointment.AppointmentDate.ToShortDateString()</td>
                    <!-- Display other appointment properties if needed -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No appointments found for this patient.</p>
}
