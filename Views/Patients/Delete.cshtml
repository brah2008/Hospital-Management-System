@model Patient

@{
    ViewData["Title"] = "Delete Patient";
}

<h2>Delete Patient</h2>

<p>Are you sure you want to delete this patient?</p>

<div>
    <h4>Patient Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Patient ID:</dt>
        <dd class="col-sm-10">@Model.PatientId</dd>

        <dt class="col-sm-2">First Name:</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name:</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <!-- Add more details if needed -->
    </dl>
</div>

<form asp-controller="Patients" asp-action="Delete" asp-route-id="@Model.PatientId" method="post">
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-controller="Patients" asp-action="Index">Back to Patients</a>
</form>

