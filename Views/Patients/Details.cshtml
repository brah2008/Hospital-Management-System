@model Patient

@{
    ViewData["Title"] = "Patient Details";
}

<h2>Patient Details</h2>

<div>
    <h4>Basic Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Patient ID:</dt>
        <dd class="col-sm-10">@Model.PatientId</dd>

        <dt class="col-sm-2">First Name:</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name:</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <!-- Add more details if needed -->
    </dl>
</div>

<!-- Add sections for displaying other information, such as appointments, medical history, etc. -->

<div>
    <h4>Appointments</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Appointment ID</th>
                <th>Date</th>
                <!-- Add more columns if needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model.Appointments)
            {
                <tr>
                    <td>@appointment.AppointmentId</td>
                    <td>@appointment.AppointmentDate</td>
                    <!-- Add more columns if needed -->
                </tr>
            }
        </tbody>
    </table>
</div>

<p>
    <a asp-controller="Patients" asp-action="Edit" asp-route-id="@Model.PatientId">Edit</a> |
    <a asp-controller="Patients" asp-action="Index">Back to Patients</a>
</p>

