@model List<Doctor>

<h2>Doctors</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <!-- Add more columns if needed -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.FirstName</td>
                <td>@doctor.LastName</td>
                <!-- Add more columns if needed -->
                <td>
                    <a asp-controller="Doctor" asp-action="Details" asp-route-id="@doctor.DoctorId">Details</a> |
                    <a asp-controller="Doctor" asp-action="Edit" asp-route-id="@doctor.DoctorId">Edit</a> |
                    <a asp-controller="Doctor" asp-action="Delete" asp-route-id="@doctor.DoctorId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
