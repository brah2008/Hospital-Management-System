@model YourNamespace.AppointmentViewModel

<h2>Delete Appointment</h2>

<h3>Are you sure you want to delete this appointment?</h3>

<div>
    <h4>Appointment Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppointmentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppointmentDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DoctorName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DoctorName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatientName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientName)
        </dd>
    </dl>

    <form asp-controller="Appointments" asp-action="Delete" asp-route-id="@Model.AppointmentId" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-controller="Appointments" asp-action="Details" asp-route-id="@Model.AppointmentId">Back to Details</a> |
        <a asp-controller="Appointments" asp-action="Index">Back to List</a>
    </form>
</div>
