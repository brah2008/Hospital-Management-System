@model YourNamespace.AppointmentViewModel

<h2>Edit Appointment</h2>

<form asp-controller="Appointments" asp-action="Edit" asp-route-id="@Model.AppointmentId" method="post">
    <div class="form-group">
        <label asp-for="AppointmentDate">Appointment Date:</label>
        <input asp-for="AppointmentDate" class="form-control" />
        <span asp-validation-for="AppointmentDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DoctorId">Doctor:</label>
        <select asp-for="DoctorId" asp-items="@(new SelectList(Model.Doctors, "DoctorId", "FullName"))" class="form-control">
            <option value="">Select Doctor</option>
        </select>
        <span asp-validation-for="DoctorId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PatientId">Patient:</label>
        <select asp-for="PatientId" asp-items="@(new SelectList(Model.Patients, "PatientId", "FullName"))" class="form-control">
            <option value="">Select Patient</option>
        </select>
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>

    <!-- Add other appointment properties as needed -->

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<p>
    <a asp-controller="Appointments" asp-action="Details" asp-route-id="@Model.AppointmentId">Back to Details</a> |
    <a asp-controller="Appointments" asp-action="Index">Back to List</a>
</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

